pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven'            // Your Jenkins Maven installation name
        JAVA_HOME = tool 'JDK'               // Your Jenkins JDK installation name
        PATH = "${env.MAVEN_HOME}/bin;${env.JAVA_HOME}/bin;${env.PATH}"

        DOCKERHUB_CREDENTIALS = 'dockerhub-creds'  // Jenkins credential ID
        DOCKERHUB_USERNAME = 'rbisen'              // Your DockerHub username
        IMAGE_NAME = 'final_api_project'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rajshribisen50/Final_API_Project_RestAssured_Cucumber_Testng.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean test'
            }
        }

        stage('Generate Allure Report') {
            steps {
                bat 'allure generate target/allure-results --clean -o allure-report'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    passwordVariable: 'DOCKERHUB_PASS',
                    usernameVariable: 'DOCKERHUB_USER'
                )]) {
                    bat "docker login -u %DOCKERHUB_USER% -p %DOCKERHUB_PASS%"
                    bat "docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG}"
                    bat "docker logout"
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/allure-report/**', allowEmptyArchive: true
        }
        success {
            echo "Pipeline completed successfully! Docker image pushed: ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "Pipeline failed. Check the console output for errors."
        }
    }
}
