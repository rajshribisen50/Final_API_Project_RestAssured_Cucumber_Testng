pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven'        // Jenkins Maven installation name
        JAVA_HOME = tool 'JDK'           // Jenkins JDK installation name
        PATH = "${env.MAVEN_HOME}/bin;${env.JAVA_HOME}/bin;${env.PATH}"

        DOCKERHUB_CREDENTIALS = 'dockerhub-creds'  // Jenkins credential ID
        IMAGE_NAME = 'final_api_project'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rajshribisen50/Final_API_Project_RestAssured_Cucumber_Testng.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean test'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Use the username from credentials for tagging
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {
                    bat "docker build -t %DOCKERHUB_USER%/${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {
                    bat "docker login -u %DOCKERHUB_USER% -p %DOCKERHUB_PASS%"
                    bat "docker push %DOCKERHUB_USER%/${IMAGE_NAME}:${IMAGE_TAG}"
                    bat "docker logout"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully! Docker image pushed: %DOCKERHUB_USER%/${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "Pipeline failed. Check the console output for errors."
        }
    }
}
